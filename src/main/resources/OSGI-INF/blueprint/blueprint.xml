<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" default-activation="eager">
    
    <service
        id="IBCWriterService"
        ref="BCWriter"
        interface="org.iot.soft.services.IBCWriter"
    />
    
    <service
        id="ILedgerReaderService"
        ref="BCReader"
        interface="org.iot.soft.services.IBCReader"
    />
    
    <bean 
        id="LedgerService"
        class="org.iot.soft.activator.Activator"
        init-method="start"
        destroy-method="stop"
    />

    <bean
        id="ledgerReader"
        class="org.iot.soft.model.BCReader"
        init-method="start"
        destroy-method="stop"
    />
    
    <bean
        id="ledgerWriter"
        class="org.iot.soft.model.BCWriter"
        init-method="start"
        destroy-method="stop"
    />

</blueprint>