<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" default-activation="eager">
    
    <service
        id="ILedgerWriterService"
        ref="ledgerWriter"
        interface="dlt.client.tangle.services.ILedgerWriter"
    />
    
    <service
        id="ILedgerReaderService"
        ref="ledgerReader"
        interface="dlt.client.tangle.services.ILedgerReader"
    />
    
    <bean 
        id="ledgerService"
        class="dlt.client.tangle.activator.Activator"
        init-method="start"
        destroy-method="stop"
    />

    <bean
        id="ledgerReader"
        class="dlt.client.tangle.model.LedgerReader"
        init-method="start"
        destroy-method="stop"
    />
    
    <bean
        id="ledgerWriter"
        class="dlt.client.tangle.model.LedgerWriter"
        init-method="start"
        destroy-method="stop"
    />

</blueprint>